<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>

  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, class: "ckeditor", rows: 5 %> <!-- Agregamos la clase 'ckeditor' -->
  </div>

  <div class="actions">
    <%= f.submit "Add Comment", style: "background-color: green; color: white; padding: 5px 10px; border: none; cursor: pointer;" %>
  </div>
<% end %>

<!-- Make sure CKEditor script is loaded before this script -->
<script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const editorElements = document.querySelectorAll('.ckeditor');
    editorElements.forEach(element => {
      ClassicEditor.create(element)
        .then(editor => {
          console.log('CKEditor inicializado');
        })
        .catch(error => {
          console.error('Error al inicializar CKEditor:', error);
        });
    });
  });
  


</script>
