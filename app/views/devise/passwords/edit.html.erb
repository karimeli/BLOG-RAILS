<div class="auth-container">
  <h2 class="auth-title">Crea tu nueva contraseña</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="auth-field">
      <%= f.label :password, "Nueva contraseña" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres como mínimo)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "auth-input" %>
    </div>

    <div class="auth-field">
      <%= f.label :password_confirmation, "Confirma tu nueva contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input" %>
    </div>

    <div class="auth-actions">
      <%= f.submit "Cambiar mi contraseña", class: "auth-button" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>