<div class="auth-container">
  <h2 class="auth-title">¿Olvidaste tu contraseña?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="auth-field">
      <%= f.label :email, "Correo electrónico" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input", placeholder: "Escribe tu correo" %>
    </div>

    <div class="auth-actions">
      <%= f.submit "Enviarme instrucciones", class: "auth-button" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= render "devise/shared/links" %>
  </div>
</div>