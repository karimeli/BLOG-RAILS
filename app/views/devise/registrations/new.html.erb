<div class="auth-container">
  <h2 class="auth-title">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="auth-field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
    </div>

    <div class="auth-field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: "auth-input" %>
    </div>

    <div class="auth-field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input" %>
    </div>

    <div class="auth-actions">
      <%= f.submit "Sign Up", class: "auth-button" %>
    </div>
  <% end %>

  <div class="auth-links">
    <%= link_to "Login", new_session_path(resource_name), class: "auth-link" %>
  </div>
</div>
